<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp">
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:baselineAligned="false"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="?attr/cardcolor">

        <TextView
            android:id="@+id/bell_schedule"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Bell Schedule"
            android:textAlignment="inherit"
            android:clickable="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="?attr/selectable"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:baselineAligned="false"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="?attr/cardcolor">

        <TextView
            android:id="@+id/important_places"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Important Places"
            android:background="?attr/selectable"
            android:textAlignment="inherit"
            android:clickable="true"
            android:padding="16dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:baselineAligned="false"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="?attr/cardcolor">

        <TextView
            android:id="@+id/announcements"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Announcements"
            android:textAlignment="inherit"
            android:clickable="true"
            android:textStyle="bold"
            android:background="?attr/selectable"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:padding="16dp"/>

    </LinearLayout>
</LinearLayout>
