<?xml version="1.0" encoding="utf-8"?>
<com.jakewharton.scalpel.ScalpelFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scalpel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?attr/cardcolor"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

    <ListView
        android:id="@+id/lvDepartments"
        android:layout_width="match_parent"
        android:layout_height="506dp"
        android:divider="?attr/dividercolorswitch"
        android:dividerHeight="1px"
        android:clipToPadding="false"
        android:smoothScrollbar="true"
        android:scrollbarStyle="insideOverlay"
        android:listSelector="?attr/selectable"
        android:footerDividersEnabled="true"
        android:overScrollMode="always"
        android:visibility="visible"
        android:fastScrollEnabled="true"
        android:scrollingCache="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:background="?attr/dividercolorswitch"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/view" />
</RelativeLayout>
    </com.jakewharton.scalpel.ScalpelFrameLayout>
